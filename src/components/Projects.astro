---
import NextJsIcon from './icons/NextJsIcon.astro'

const TAGS = {
  NEXT: {
    name: 'NextJS',
    class: 'bg-black text-white',
    icon: NextJsIcon
  }
}

const PROJECTS = [
  {
    title: 'Pokemons List',
    description: 'Simple web app with NextJS',
    link: 'https://poke-demo-cmatteo.vercel.app/',
    github: 'https://github.com/IKameloth/02-poke-demo',
    image: '/images/pokemons.webp',
    tags: [TAGS.NEXT, TAGS.NEXT, TAGS.NEXT]
  },
  {
    title: 'Proyecto 2',
    description: 'Breve descripcion del proyecto 2',
    link: '',
    github: '',
    image: 'https://via.placeholder.com/300x200',
    tags: [TAGS.NEXT]
  }
]
---

{
  PROJECTS.map(({ title, description, link, github, image, tags }) => (
    <article>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-2">{title}</h3>
      <p class="text-lg mb-4 text-pretty">{description}</p>
      <ul class="flex gap-x-2 flex-row mb-2">
        {tags.map((tag) => (
          <li>
            <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
              <tag.icon class="size-4" />
              {tag.name}
            </span>
          </li>
        ))}
      </ul>
      <img
        class="rounded shadow-2xl shadow-white/10"
        src={image}
        alt={`Captura de pantalla de ${title.toLowerCase()}`}
      />
    </article>
  ))
}
