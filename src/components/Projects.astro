---
import LinkButton from './LinkButton.astro'
import GitHubIcon from './icons/GitHubIcon.astro'
import NextJsIcon from './icons/NextJsIcon.astro'

const TAGS = {
  NEXT: {
    name: 'NextJS',
    class: 'bg-black text-white',
    icon: NextJsIcon
  }
}

const PROJECTS = [
  {
    title: 'Pokemons List',
    description: 'Simple web app with NextJS',
    link: 'https://poke-demo-cmatteo.vercel.app/',
    github: 'https://github.com/IKameloth/02-poke-demo',
    image: '/images/pokemons.webp',
    tags: [TAGS.NEXT, TAGS.NEXT, TAGS.NEXT]
  },
  {
    title: 'Proyecto 2',
    description: 'Breve descripcion del proyecto 2',
    link: '',
    github: '',
    image: 'https://via.placeholder.com/300x200',
    tags: [TAGS.NEXT]
  }
]
---

<section class="flex flex-col gap-16">
  {
    PROJECTS.map(({ title, description, link, github, image, tags }) => (
      <article>
        <h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">{title}</h3>
        <p class="text-lg mb-4 text-pretty">{description}</p>
        <ul class="flex gap-x-2 flex-row mb-2">
          {tags.map((tag) => (
            <li>
              <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <img
          class="rounded shadow-2xl shadow-white/10 aspect-video"
          src={image}
          alt={`Captura de pantalla de ${title.toLowerCase()}`}
        />
        <footer class="flex gap-x-4 items-end justify-start mt-4">
          {github && (
            <LinkButton href={github}>
              <GitHubIcon class="size-6" />
              CÃ³digo fuente
            </LinkButton>
          )}
          <LinkButton href={link}>
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              fill="none"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <>
                <path stroke="none" d="M0 0h24v24H0z" fill="none" />
                <path d="M19.5 7a9 9 0 0 0 -7.5 -4a8.991 8.991 0 0 0 -7.484 4" />
                <path d="M11.5 3a16.989 16.989 0 0 0 -1.826 4" />
                <path d="M12.5 3a16.989 16.989 0 0 1 1.828 4" />
                <path d="M19.5 17a9 9 0 0 1 -7.5 4a8.991 8.991 0 0 1 -7.484 -4" />
                <path d="M11.5 21a16.989 16.989 0 0 1 -1.826 -4" />
                <path d="M12.5 21a16.989 16.989 0 0 0 1.828 -4" />
                <path d="M2 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M17 10l1 4l1.5 -4l1.5 4l1 -4" />
                <path d="M9.5 10l1 4l1.5 -4l1.5 4l1 -4" />
              </>
            </svg>
            Ir al sitio web
          </LinkButton>
        </footer>
      </article>
    ))
  }
</section>
